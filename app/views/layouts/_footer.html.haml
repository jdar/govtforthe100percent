%footer
  .footer
    %a.iconLink{:href => "https://github.com/RefugeTravesties/refugetravesties", :aria => { :label => t('.aria-labels.github')}}
      %i.icon.fa.fa-github-square.fa-3x
    %a.iconLink{:href => "https://twitter.com/refugetravesties", :aria => { :label => t('.aria-labels.twitter')}}
      %i.icon.fa.fa-twitter-square.fa-3x
    %a.iconLink{:href => "https://www.facebook.com/refugetravesties", :aria => { :label => t('.aria-labels.facebook')}}
      %i.icon.fa.fa-facebook-square.fa-3x
    %a.iconLink{:href => contact_path, :aria => { :label => t('.aria-labels.email')}}
      %i.icon.fa.fa-envelope.fa-3x
    %br/
    = t('.refuge-travesties-is-open-source')
    %a{:href => "https://github.com/RefugeTravesties/refugetravesties"} #{t('.code-on-github')}
    %br/
    = t('.contribute-to-the-project')
    %a{:href => "https://patreon.com/refugetravesties"} #{t('.on-patreon')}
    %br/
    = "\&copy; #{t('.copyleft')}  #{Date.today.year} #{t('.refuge-travesties')}".html_safe

