.splash-content
  .row
    .col-xs-12.col-sm-8.col-sm-offset-2
      .splash-text-container.centered-text
        %h1.headroom
          = "Way Back to Government"
        %h3.centered-text
          = "Recording history in real-time so we can find our way back." 

  .row.more-headroom
    .col-xs-12.col-sm-8.col-sm-offset-2
      = render partial: "layouts/search", locals: {splash: true}

  .row.more-headroom
    .col-xs-12.col-sm-6.col-sm-offset-3
      .splash-text-container.centered-text
        %span If you have been displaced or economically affected...
        = button_to new_experience_path, method: :get, class: "btn btn-lg btn-purple splash-add-experience-btn" do
          = t('.add-experience-button-label')
          %i.fa.fa-plus-square-o.fa-2x
  - if @experience && @experience.latitude
    .row.even-more-headroom
      //.col-xs-6.col-sm-3.col-sm-offset-3
      .col-xs-12.col-sm-9.col-sm-offset-2{style: "background-color: white"}
        .col-xs-3.col-sm-4
          #map
            %div#mapArea{ data: { latitude: @experience.latitude, longitude: @experience.longitude } }
        .col-xs-9.col-sm-6
          = render @experience, partial: "experiences/experience" 
          = "Submitted anonymously on #{@experience.created_at.strftime("%B %d, %Y")}"
  .row.more-headroom
    .col-xs-12.col-sm-6.col-sm-offset-3
      = button_to experiences_path, method: :get, class: "btn btn-lg btn-purple splash-add-experience-btn" do
        = "Click here for all submissions."

  .splash-text-container.centered-text
    = render 'layouts/footer'
