%h1= t('travesty.add_new')

= simple_form_for @travesty, :url => travesties_path, :method => :post, html: {class: 'submit-new-bathroom-form form-vertical'} do |f|
  %h5= t('travesty.required')
  .clearfix
    %button.btn.btn-light-purple.guess-btn{:type => "button", :value => t('travesty.guess_location')}
      = t('travesty.guess_location')
      %i.fa.fa-refresh.fa-spin

  / Add map for preview
  #mapArea.hidden{ data: { latitude: 38.904735, longitude: -77.033812 } }

  .nearby-container.footroom
    // Content of nearby travesties gets rendered here.

  = f.input :name, :required => true
  = f.input :street, :required => true
  = f.input :city, :required => true
  = f.input :state, :required => true
  = f.input :country, priority: ["United States", "Canada", "United Kingdom"], :required => true, input_html: {class: 'form-control'}
  = f.hidden_field :latitude
  = f.hidden_field :longitude
  = f.hidden_field :edit_id
  = f.hidden_field :approved
  = f.input :accessible, :collection => [[t('travesty.accessible'), true], [t('travesty.not_accessible'), false]], :include_blank => false
  = f.input :unisex, :collection => [[t('travesty.type.unisex'), true], [t('travesty.type.single_stall'), false]], :include_blank => false
  = f.input :changing_table, :collection => [[t('travesty.changing_table'), true], [t('travesty.no_changing_table'), false]], :include_blank => false
  = f.input :directions, :placeholder => t('travesty.directions_hint'), :as => :text, :required => false, :input_html => { :class => "span6" }
  = f.input :comment, :placeholder => t('travesty.comments_hint'), :as => :text, :required => false, :input_html => { :class => "span6" }

  .form-group
    .g-recaptcha{'data-sitekey' => "#{ENV['RECAPTCHA_SITE_KEY']}"}

  / Click to preview location
  %button{type: 'button', class: 'preview-btn linkbutton'}
    = t('travesty.preview')
  = f.button :submit, t('travesty.restsubmit'), :class => "linkbutton"
